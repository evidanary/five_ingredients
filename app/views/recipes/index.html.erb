<p id="notice"><%= notice %></p>

<h1>Your Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Total time</th>
      <th>Created at</th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.name, recipe %></td>
        <td><%= recipe.total_time %></td>
        <td><%= recipe.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
